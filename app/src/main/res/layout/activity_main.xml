<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/phone_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#00ffffff"
        android:drawableLeft="@mipmap/register_icon_phone_default"
        android:drawablePadding="@dimen/dp_10"
        android:hint="手机号"
        android:textColor="#fff"
        android:textColorHint="#fff" />
    <View
        android:id="@+id/phone_view"
        android:layout_alignLeft="@+id/phone_login"
        android:layout_alignRight="@+id/phone_login"
        android:layout_below="@+id/phone_login"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff" />
    <ImageView
        android:id="@+id/see_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/log_icon_eye_default"
        android:layout_above="@+id/pwd_view"
        android:layout_alignRight="@+id/pwd_view"/>
    <EditText
        android:id="@+id/pwd_login"
        android:layout_below="@+id/phone_view"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:drawablePadding="@dimen/dp_10"
        android:textColorHint="#fff"
        android:password="true"
        android:hint="登录密码"
        android:drawableLeft="@mipmap/register_icon_lock_default"
        android:textColor="#fff"
        android:background="#00ffffff"
        />
    <View
        android:id="@+id/pwd_view"
        android:layout_alignLeft="@+id/phone_login"
        android:layout_alignRight="@+id/phone_login"
        android:layout_below="@+id/pwd_login"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff" />

    <CheckBox
        android:id="@+id/jzpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwd_login"
        android:layout_below="@+id/pwd_view"
        android:textColor="#fff"
        android:buttonTint="#fff"
        android:text="记住密码"
        android:padding="@dimen/dp_10"/>
    <CheckBox
        android:id="@+id/zdlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jzpassword"
        android:layout_below="@+id/pwd_view"
        android:textColor="#fff"
        android:buttonTint="#fff"
        android:text="自动登录"
        android:padding="@dimen/dp_10"/>
    <TextView
        android:id="@+id/go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_view"
        android:padding="@dimen/dp_10"
        android:layout_alignRight="@+id/pwd_view"
        android:textColor="#fff"
        android:text="注册账号"/>
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_30"
        android:textColor="#fff"
        android:text="登录"
        android:layout_below="@+id/zdlogin"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/button_yuanjiao"
        android:layout_alignLeft="@id/phone_view"
        android:layout_alignRight="@id/phone_login"/>
    <TextView
        android:id="@+id/dsftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginTop="@dimen/dp_80"
        android:padding="@dimen/dp_10"
        android:layout_alignRight="@+id/phone_view"
        android:layout_alignLeft="@+id/phone_view"
        android:textColor="#fff"
        android:gravity="center"
        android:text="————第三方账号快速登录————"/>

    <ImageView
        android:id="@+id/wxLogin"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/dsftext"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/log_icon_weixin_default" />
</RelativeLayout>